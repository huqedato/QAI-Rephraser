{
  "manifest_version": 3,
  "name": "QAI Rephraser",
  "version": "2.0.3",
  "description": "Rephrase text using OpenAI's ChatGPT",
  "action": {},
  "host_permissions": ["https://*.openai.com/"],
  "permissions": ["storage", "activeTab", "scripting", "contextMenus"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "icons": {
    "16": "QAIRephaser-logo-16.png",
    "32": "QAIRephaser-logo-32.png",
    "48": "QAIRephaser-logo-48.png",
    "128": "QAIRephaser-logo-128.png"
  }
}
